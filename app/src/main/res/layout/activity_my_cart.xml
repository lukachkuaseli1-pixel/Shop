<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@null"
        android:src="@drawable/back_arrow"
        android:tint="#A0A0A0"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="58dp" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="130dp"
        android:layout_height="118dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/oil_foreground"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal (2 items)"
        app:layout_constraintStart_toStartOf="@+id/tvTotal"
        tools:layout_editor_absoluteY="580dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this product is very"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="impotant and most seller"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120$"
        android:textColor="#FF9900"
        android:textSize="14dp"
        android:textStyle="bold"


        app:layout_constraintStart_toStartOf="@+id/textView7"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/productImage"
        tools:layout_editor_absoluteX="177dp" />


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="240$"
        android:textSize="18dp"
        android:textColor="#FF9900"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotal"
        app:layout_constraintTop_toTopOf="@+id/tvTotal"
        tools:layout_editor_absoluteX="327dp" />

    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="@+id/productImage"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/btnMinus"
        app:layout_constraintStart_toEndOf="@+id/btnMinus"
        app:layout_constraintTop_toTopOf="@+id/btnMinus" />

    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="@+id/btnMinus"
        app:layout_constraintStart_toEndOf="@+id/tvQuantity"
        app:layout_constraintTop_toTopOf="@+id/btnMinus" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:src="@drawable/trash"
        android:tint="#FD3232"

        app:layout_constraintBottom_toBottomOf="@+id/tvQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvQuantity"
        tools:layout_editor_absoluteX="316dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="610dp" />

    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF9900"
        android:text="Place Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
